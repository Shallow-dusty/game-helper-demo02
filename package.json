{
  "name": "grimoire-web",
  "private": true,
  "version": "0.8.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:run",
    "test:run": "npm run test:src && npm run test:tests",
    "test:src": "npm run test:src:logic && npm run test:src:ui",
    "test:src:logic": "NODE_OPTIONS=\"--max-old-space-size=6144 --expose-gc\" VITEST_SCOPE=src-logic node ./node_modules/vitest/vitest.mjs run --config vitest.config.ts",
    "test:src:ui": "NODE_OPTIONS=\"--max-old-space-size=6144 --expose-gc\" VITEST_SCOPE=src-ui node ./node_modules/vitest/vitest.mjs run --config vitest.config.ts",
    "test:tests": "NODE_OPTIONS=\"--max-old-space-size=6144 --expose-gc\" VITEST_SCOPE=tests node ./node_modules/vitest/vitest.mjs run --config vitest.config.ts",
    "test:watch": "NODE_OPTIONS=\"--max-old-space-size=6144 --expose-gc\" node ./node_modules/vitest/vitest.mjs --config vitest.config.ts",
    "test:coverage": "NODE_OPTIONS=\"--max-old-space-size=6144 --expose-gc\" node ./node_modules/vitest/vitest.mjs run --coverage --config vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "prepare": "husky"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/react": "^10.38.0",
    "@supabase/supabase-js": "^2.84.0",
    "@types/matter-js": "^0.20.2",
    "@xstate/react": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "html2canvas": "^1.4.1",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "immer": "^11.0.1",
    "lucide-react": "^0.555.0",
    "matter-js": "^0.20.0",
    "openai": "^6.9.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.1",
    "react-konva": "^18.2.10",
    "react-window": "^2.2.3",
    "recharts": "^3.5.0",
    "tailwind-merge": "^3.4.0",
    "xstate": "^5.25.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/html2canvas": "^0.5.35",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^2.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "rollup": "^4.53.3",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.48.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
